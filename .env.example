# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/farmalert_db

# OpenWeatherMap API
OWM_API_KEY=your_openweathermap_api_key_here
# Alternative key name (if needed)
OPENWEATHER_API_KEY=your_openweathermap_api_key_here

# JWT Authentication Configuration
# IMPORTANT: Change this to a strong, unique secret key in production
# Generate a secure key with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-secret-key-change-in-production

# JWT Token Expiration Time
# Examples: '1h', '24h', '7d', '30d'
JWT_EXPIRES_IN=24h
